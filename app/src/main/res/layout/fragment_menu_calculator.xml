<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation = "vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.menuapp5.MenuActivity">

    <TextView
        android:id="@+id/stage"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="4"/>


    <TableLayout
        android:layout_weight="1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:shrinkColumns="0"
        android:stretchColumns="1">


        <TableRow>

            <Button
                android:id="@+id/one"
                android:text="1" />

            <Button
                android:id="@+id/two"
                android:text="2" />

            <Button
                android:id="@+id/three"
                android:text="3" />
            <Button
                android:id="@+id/add"
                android:text="+" />

        </TableRow>

        <TableRow>
            <Button
                android:id="@+id/four"
                android:text="4"/>
            <Button
                android:id="@+id/five"
                android:text="5"/>
            <Button
                android:id="@+id/six"
                android:text="6"/>
            <Button
                android:id="@+id/sub"
                android:text="-" />

        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/seven"
                android:text="7"/>
            <Button
                android:id="@+id/eight"
                android:text="8"/>
            <Button
                android:id="@+id/nine"
                android:text="9"/>
            <Button
                android:id="@+id/mul"
                android:text="X"/>

        </TableRow>

        <TableRow>
            <Button
                android:id="@+id/zero"
                android:text="0"/>
            <Button
                android:id="@+id/mod"
                android:text="mod"/>
            <Button
                android:id="@+id/percent"
                android:text="%"/>
            <Button
                android:id="@+id/div"
                android:text="/"/>

        </TableRow>
        <TableRow>

            <Button
                android:id="@+id/equal"
                android:text="="/>
        </TableRow>

    </TableLayout>


</LinearLayout>